<link rel="stylesheet" href="/css/home.css">

<h1>
    FakeBook / <%= title %>
</h1>

<section id="feed-posts">
    <h3>Posts</h3>
    
    <!-- show posting form only if user is signed in -->
    <% if (locals.user) { %>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" id="" cols="30" rows="10" placeholder="Start typing here ..." required></textarea>
            <input type="submit" value="Post">
        </form>
    <% } %>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
                <li>
                    <p><b>Content : </b> <%= post.content %> </p>
                    <p><b>Created By : </b> <%= post.user.name %> </p>
                    <p><b>Date : </b> <%= post.createdAt.toISOString().substr(0,10) %> </p>
                    <p><b>Time : </b> <%= post.updatedAt.toISOString().substr(11,5) %> </p>
                </li>
                <div class="post-comments">
                    <% if (locals.user) { %>
                        <form action="/comments/create" method="POST">
                            <input type="text" name="post_content" placeholder="Type here to add comment ..." required>
                            <input type="hidden" name="post_id" value="<%= post._id %>">
                            <input type="submit" value="comment">
                        </form>
                    <% } %>

                    <div class="post-comments-list">
                        <ul id="post-comments-<%= post._id %>">
                            <% for (comment of post.comments) { %>  <!-- from comments array in posts -->
                                 <p>
                                    <%= comment.content %>
                                    <br>
                                    <small>
                                        <%= comment.user.name %>
                                    </small>
                                </p>
                            <% } %>
                        </ul>
                    </div>
                </div>
                <br>
            <% } %>
        </ul>
        
    </div>
</section>